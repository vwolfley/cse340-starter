<!-- Content Heading -->
<% if (title) { %>
<h1><%= title %></h1>
<% } else { res.redirect('/') } %>

<!-- Message Block -->
<%- messages() %>

<div class="container">
    <div class="registration-container">
        <form id="registrationForm" class="form-container">
            <div class="input">
                <label for="account_firstname">First Name<span class="required">*</span></label>
                <input type="text" id="account_firstname" name="account_firstname" required />
            </div>
            <div class="input">
                <label for="account_lastname">Last Name<span class="required">*</span></label>
                <input type="text" id="account_lastname" name="account_lastname" required />
            </div>
            <div class="input">
                <label for="account_email">Email<span class="required">*</span></label>
                <input type="email" id="account_email" name="account_email" required />
            </div>
            <div class="input">
                <label for="account_password">Password<span class="required">*</span></label>
                <input
                    type="password"
                    id="account_password"
                    name="account_password"
                    required
                    title="Password must be at least 12 characters long and include at least one capital letter, one number, and one special character."
                    placeholder="Enter a secure password"
                />
                <p>Password must be at least 12 characters long and include:</p>
                <ul>
                    <li>At least one capital letter</li>
                    <li>At least one number</li>
                    <li>At least one special character</li>
                </ul>
                <span id="passWordBtn">Show Password</span>
            </div>
            <div class="submit-button">
                <button type="submit">Register</button>
            </div>
        </form>
    </div>
</div>
